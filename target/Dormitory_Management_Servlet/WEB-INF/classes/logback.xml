<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>D:/Java/Dormitory_Management_Servlet/log.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss} - %msg%n</pattern>
        </encoder>
    </appender>
    <root level="info">
        <appender-ref ref="FILE" />
    </root>
</configuration>